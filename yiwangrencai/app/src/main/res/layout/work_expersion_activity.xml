<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_popuwinddd"
    android:orientation="vertical">

    <RelativeLayout

        style="@style/public_title">

        <FrameLayout
            android:id="@+id/iv_back_basic"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:background="@drawable/back_selector"
            android:clickable="true">
        <ImageView
            android:layout_gravity="center"
            style="@style/public_image_back" />
        </FrameLayout>
        <TextView
            android:id="@+id/tv_tiltless"
            style="@style/public_text_middle"
            android:text="工作经历" />
        <TextView
            android:id="@+id/tv_next_skip_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:visibility="gone"
            android:layout_toRightOf="@id/tv_tiltless"
            android:textColor="@color/bg_white"
            android:textSize="18dp"
            android:text="跳过" />
        <TextView
            android:id="@+id/tv_next_basic"
            style="@style/public_text_next"
            android:text="完成" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="#f0f0f0"
                android:orientation="horizontal"
                android:paddingTop="7dp">

                <LinearLayout style="@style/resume_editor_four_layout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/tv_one_number"
                            style="@style/resume_progress_text"
                            android:background="@drawable/shape_base_circle_green"
                            android:text="1" />

                        <View
                            style="@style/editor_resume_text"
                            android:layout_toRightOf="@id/tv_one_number"
                            android:background="#42bfb6" />
                    </RelativeLayout>

                    <TextView
                        style="@style/base_information_edit_progress"
                        android:text="基本资料"
                        android:textColor="@color/text_color_green" />
                </LinearLayout>

                <LinearLayout style="@style/resume_editor_four_layout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <View style="@style/editor_resume_text"
                            android:background="#42bfb6"/>

                        <TextView
                            android:id="@+id/tv_two_number"
                            style="@style/resume_progress_text"
                            android:background="@drawable/shape_base_circle_green"
                            android:text="2" />

                        <View
                            style="@style/editor_resume_text"
                            android:layout_toRightOf="@id/tv_two_number"
                            android:background="#42bfb6"/>


                    </RelativeLayout>

                    <TextView
                        style="@style/base_information_edit_progress"
                        android:text="求职意向"
                        android:textColor="#42bfb6"/>
                </LinearLayout>

                <LinearLayout style="@style/resume_editor_four_layout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <View style="@style/editor_resume_text"
                            android:background="#42bfb6"/>

                        <TextView
                            android:id="@+id/tv_three_number"
                            style="@style/resume_progress_text"
                            android:background="@drawable/shape_base_circle_green"
                            android:text="3"
                            />

                        <View
                            style="@style/editor_resume_text"
                            android:layout_toRightOf="@id/tv_three_number"
                            android:background="#42bfb6"/>
                    </RelativeLayout>

                    <TextView
                        style="@style/base_information_edit_progress"
                        android:text="教育背景"
                        android:textColor="#42bfb6"/>
                </LinearLayout>

                <LinearLayout style="@style/resume_editor_four_layout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/tv_four_number"
                            style="@style/resume_progress_text"
                            android:background="@drawable/shape_base_circle_green"
                            android:text="4" />

                        <View
                            style="@style/editor_resume_text"
                            android:layout_toLeftOf="@id/tv_four_number"
                            android:background="#42bfb6"/>


                    </RelativeLayout>

                    <TextView
                        style="@style/base_information_edit_progress"
                        android:text="工作经历"
                        android:textColor="#42bfb6"/>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_company_name"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_company_name"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="公司名称" />
                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_company_name"/>

                <ImageView
                    android:id="@+id/icon_image_next_basic"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_input_company_name"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b"
                    android:layout_toLeftOf="@id/icon_image_next_basic"
                    android:text="请输入公司名称" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />
            <!-- 性别-->
            <RelativeLayout
                android:id="@+id/rl_industry_involved"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_industry"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="所属行业" />
                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_industry"/>

                <ImageView
                    android:id="@+id/icon_image_next_sex"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_suoshu_hangye"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_toLeftOf="@id/icon_image_next_sex"
                    android:text="请选择所属行业" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />
            <!-- 生日 -->
            <RelativeLayout
                android:id="@+id/rl_natrue_business"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_company_xing"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="公司性质" />
                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_company_xing"/>

                <ImageView
                    android:id="@+id/icon_image_next_birthday"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_select_natrue_business"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b"
                    android:layout_toLeftOf="@id/icon_image_next_birthday"
                    android:text="请选择公司性质" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <!--学历-->
            <RelativeLayout
                android:id="@+id/rl_scale_company"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_scanle"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="公司规模" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_scanle"/>

                <ImageView
                    android:id="@+id/icon_image_next_education"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_select_company_scale"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b"
                    android:layout_toLeftOf="@id/icon_image_next_education"
                    android:text="请选择公司规模" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_entry_time"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_entry_time"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="入职时间" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_entry_time"/>

                <ImageView
                    android:id="@+id/icon_image_next_work"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_entry_time"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/icon_image_next_work"
                    android:textColor="@color/text_color_b"
                    android:text="请选择入职时间" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_dimission"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_leave_time"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="离职时间" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_leave_time"/>

                <ImageView
                    android:id="@+id/icon_image_next_location"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_leave_time"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/icon_image_next_location"
                    android:textColor="@color/text_color_b"
                    android:text="请选择离职时间" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_work_name"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_work_name"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="职位名称" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_work_name"/>

                <ImageView
                    android:id="@+id/icon_image_next_static"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_input_work_names"
                    style="@style/base_item_iformation"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/icon_image_next_static"
                    android:textColor="@color/text_color_b"
                    android:text="请输入职位名称" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_work_discriub"
                style="@style/relation_editor_resume">

                <TextView
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="工作描述" />



                <ImageView
                    android:id="@+id/icon_image_next_phone"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_describe_work"
                    style="@style/base_item_iformation"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/icon_image_next_phone"
                    android:textColor="@color/text_color_b"
                    android:text="请输入工作描述" />
            </RelativeLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="30dp"
             android:layout_marginTop="20dp">
             <LinearLayout
                 android:id="@+id/linearLayout_delete"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:visibility="invisible"
                 android:gravity="center"
                 android:layout_centerInParent="true"
                 android:layout_centerVertical="true"
                 android:orientation="horizontal">

                 <ImageView
                     android:layout_width="18dp"
                     android:layout_height="18dp"
                     android:src="@mipmap/btn_delete_n2x"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:layout_marginLeft="10dp"
                     android:gravity="center_vertical"
                     android:textSize="15sp"
                     android:textColor="#ff8000"
                     android:text="删除"/>
             </LinearLayout>
         </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
