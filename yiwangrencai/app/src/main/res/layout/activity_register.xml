<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_register_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout style="@style/title_login">

        <FrameLayout
            android:id="@+id/fram_resume_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@mipmap/btn_back2x" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_user_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@drawable/shape_corners_normal">

        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/tab_use_n3x" />

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imageview1"
            android:maxLines="1"
            android:background="@null"
            android:hint="请输入用户名" />

        <ImageView
            android:id="@+id/image_user_name"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_marginRight="7dp"
            android:src="@mipmap/cell_search_close"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_phone_number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_corners_normal">

        <ImageView
            android:id="@+id/imageview2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/tx_mobile2x" />

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:inputType="number"
            android:layout_toRightOf="@id/imageview2"
            android:maxLength="11"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="请输入手机号码" />

        <ImageView
            android:id="@+id/image_phone_number"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_marginRight="7dp"
            android:src="@mipmap/cell_search_close"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        >

        <RelativeLayout
            android:id="@+id/relative_verification_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="@drawable/shape_corners_normal"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageview3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/tx_message2x" />

        <EditText
            android:id="@+id/et_verification_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/imageview3"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:maxLength="6"
            android:background="@null"
            android:hint="验证码" />

            <ImageView
                android:id="@+id/image_code_verification"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:layout_marginRight="7dp"
                android:src="@mipmap/cell_search_close"/>

        </RelativeLayout>

        <Button
            android:id="@+id/get_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/shape_green_background"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:text="获取验证码"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_one_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_corners_normal">

        <ImageView
            android:id="@+id/imageview4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/tx_password2x" />

        <EditText
            android:id="@+id/et_one_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/imageview4"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:maxLength="6"
            android:background="@null"
            android:hint="请输入6位以上密码" />

        <ImageView
            android:id="@+id/image_one_password"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_marginRight="7dp"
            android:src="@mipmap/cell_search_close"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_two_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_corners_normal">

        <ImageView
            android:id="@+id/imageview5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/tx_password2x" />

        <EditText
            android:id="@+id/et_two_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/imageview5"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:maxLength="6"
            android:hint="再次输入密码" />

        <ImageView
            android:id="@+id/iamge_two_password"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_marginRight="7dp"
            android:src="@mipmap/cell_search_close"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_green_background"
        android:gravity="center"
        android:text="立即注册"
        android:textColor="#ffffff"
        android:textSize="18dp" />
</LinearLayout>
