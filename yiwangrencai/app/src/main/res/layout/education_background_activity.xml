<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_popuwind"
    android:orientation="vertical">

    <RelativeLayout

        style="@style/public_title">

        <FrameLayout
            android:id="@+id/iv_back_basic"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/back_selector"
            android:clickable="true">
        <ImageView
            android:layout_gravity="center"
            android:visibility="invisible"
            style="@style/public_image_back" />
        </FrameLayout>
        <TextView
            android:id="@+id/tv_tiltless"
            style="@style/public_text_middle"
            android:text="学历教育" />


        <TextView
            android:id="@+id/tv_next_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/tv_tiltless"
            android:textColor="@color/bg_white"
            android:textSize="18dp"
            android:text="跳过" />

        <TextView
            android:id="@+id/tv_next_basic"
            style="@style/public_text_next"
            android:text="下一步" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="#f0f0f0"
                android:orientation="horizontal"
                android:paddingTop="7dp">

                <LinearLayout style="@style/resume_editor_four_layout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/tv_one_number"
                            style="@style/resume_progress_text"
                            android:background="@drawable/shape_base_circle_green"
                            android:text="1" />

                        <View
                            style="@style/editor_resume_text"
                            android:layout_toRightOf="@id/tv_one_number"
                            android:background="#42bfb6" />
                    </RelativeLayout>

                    <TextView
                        style="@style/base_information_edit_progress"
                        android:text="基本资料"
                        android:textColor="@color/text_color_green" />
                </LinearLayout>

                <LinearLayout style="@style/resume_editor_four_layout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <View style="@style/editor_resume_text"
                            android:background="#42bfb6"/>

                        <TextView
                            android:id="@+id/tv_two_number"
                            style="@style/resume_progress_text"
                            android:background="@drawable/shape_base_circle_green"
                            android:text="2" />

                        <View
                            style="@style/editor_resume_text"
                            android:layout_toRightOf="@id/tv_two_number"
                            android:background="#42bfb6"/>


                    </RelativeLayout>

                    <TextView
                        style="@style/base_information_edit_progress"
                        android:text="求职意向"
                        android:textColor="#42bfb6"/>
                </LinearLayout>

                <LinearLayout style="@style/resume_editor_four_layout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <View style="@style/editor_resume_text"
                            android:background="#42bfb6"/>

                        <TextView
                            android:id="@+id/tv_three_number"
                            style="@style/resume_progress_text"
                            android:background="@drawable/shape_base_circle_green"
                            android:text="3" />

                        <View
                            style="@style/editor_resume_text"
                            android:layout_toRightOf="@id/tv_three_number"
                            android:background="#42bfb6"/>
                    </RelativeLayout>

                    <TextView
                        style="@style/base_information_edit_progress"
                        android:text="教育背景"
                        android:textColor="#42bfb6"/>
                </LinearLayout>

                <LinearLayout style="@style/resume_editor_four_layout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/tv_four_number"
                            style="@style/resume_progress_text"
                            android:background="@drawable/shape_base_circle"
                            android:text="4" />

                        <View
                            style="@style/editor_resume_text"
                            android:layout_toLeftOf="@id/tv_four_number" />


                    </RelativeLayout>

                    <TextView
                        style="@style/base_information_edit_progress"
                        android:text="工作经历" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_school_name"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_school_name"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="学校名称" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_school_name"/>

                <ImageView
                    android:id="@+id/icon_image_next_basic"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_input_school_name"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b"
                    android:layout_toLeftOf="@id/icon_image_next_basic"
                    android:text="请输入学校名称" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />
            <!-- 性别-->
            <RelativeLayout
                android:id="@+id/rl_time_enrollment"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_enter_time"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="入学时间" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_enter_time"/>

                <ImageView
                    android:id="@+id/icon_image_next_sex"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_eentry_time"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b"
                    android:layout_toLeftOf="@id/icon_image_next_sex"
                    android:text="请选择入学时间" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />
            <!-- 生日 -->
            <RelativeLayout
                android:id="@+id/rl_gradution_time"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_leave_time"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="毕业时间" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_leave_time"/>

                <ImageView
                    android:id="@+id/icon_image_next_birthday"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_gradution_time"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b"
                    android:layout_toLeftOf="@id/icon_image_next_birthday"
                    android:text="至今" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <!--学历-->
            <RelativeLayout
                android:id="@+id/rl_major_name"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_major_name"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="专业名称" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_major_name"/>

                <ImageView
                    android:id="@+id/icon_image_next_education"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_input_major_name"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b"
                    android:layout_toLeftOf="@id/icon_image_next_education"
                    android:text="请输入专业名称" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_education_background"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_education"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="学历" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_education"/>

                <ImageView
                    android:id="@+id/icon_image_next_work"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_select_education"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b"
                    android:layout_toLeftOf="@id/icon_image_next_work"
                    android:text="请选择学历" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_examination"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_tong_zhao"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="是否统招" />
                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_tong_zhao"/>
                <ImageView
                    android:id="@+id/icon_image_next_location"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_toanzhao"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b"
                    android:layout_toLeftOf="@id/icon_image_next_location"
                    android:text="是" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_discrub"
                style="@style/relation_editor_resume">

                <TextView
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="描述" />

                <ImageView
                    android:id="@+id/icon_image_next_static"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_education_describe"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:maxEms="13"
                    android:maxLines="1"
                    android:textColor="@color/text_color_b"
                    android:layout_toLeftOf="@id/icon_image_next_static"
                    android:text="请输入描述" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
