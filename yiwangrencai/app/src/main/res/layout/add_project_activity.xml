<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_popuwind"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/text_color_green">

    <FrameLayout
        android:id="@+id/fram_job_back"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/btn_back2x"
            android:layout_gravity="center"
            />
    </FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目名称"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:textSize="18dp"/>

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            >
            <TextView
                android:id="@+id/tv_add_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="保存"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:textColor="#ffffff"
                android:textSize="18dp"/>
        </FrameLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_project_name"
        style="@style/relation_editor_resume">

        <TextView
            android:id="@+id/text_progress_name"
            style="@style/base_item_iformation"
            android:layout_marginLeft="10dp"
            android:text="项目名称" />

        <TextView
            style="@style/text_start"
            android:layout_toRightOf="@id/text_progress_name"/>

        <ImageView
            android:id="@+id/icon_image_next_basic"
            style="@style/base_iamge_item_information" />

        <TextView
            android:id="@+id/tv_input_project_name"
            style="@style/base_item_iformation"
            android:textColor="@color/text_color_b5"
            android:maxEms="13"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/icon_image_next_basic"
            android:text="请输入项目名称" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line_background" />
    <!-- 性别-->
    <RelativeLayout
        android:id="@+id/rl_time_start"
        style="@style/relation_editor_resume">

        <TextView
            android:id="@+id/text_enter_time"
            style="@style/base_item_iformation"
            android:layout_marginLeft="10dp"
            android:text="开始时间" />

        <TextView
            style="@style/text_start"
            android:layout_toRightOf="@id/text_enter_time"/>

        <ImageView
            android:id="@+id/icon_image_next_sex"
            style="@style/base_iamge_item_information" />

        <TextView
            android:id="@+id/tv_project_start"
            style="@style/base_item_iformation"
            android:layout_marginRight="10dp"
            android:textColor="@color/text_color_b5"
            android:layout_toLeftOf="@id/icon_image_next_sex"
            android:text="请选择开始时间" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line_background" />
    <!-- 生日 -->
    <RelativeLayout
        android:id="@+id/rl_time_end"
        style="@style/relation_editor_resume">

        <TextView
            android:id="@+id/text_leave_time"
            style="@style/base_item_iformation"
            android:layout_marginLeft="10dp"
            android:text="结束时间" />

        <TextView
            style="@style/text_start"
            android:layout_toRightOf="@id/text_leave_time"/>

        <ImageView
            android:id="@+id/icon_image_next_birthday"
            style="@style/base_iamge_item_information" />

        <TextView
            android:id="@+id/tv_project_end"
            style="@style/base_item_iformation"
            android:layout_marginRight="10dp"
            android:textColor="@color/text_color_b5"
            android:layout_toLeftOf="@id/icon_image_next_birthday"
            android:text="至今" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line_background"
        />

    <!--学历-->
    <RelativeLayout
        android:id="@+id/rl_project_work"
        style="@style/relation_editor_resume">

        <TextView
            android:id="@+id/text_work"
            style="@style/base_item_iformation"
            android:layout_marginLeft="10dp"
            android:text="担任职位" />

        <TextView
            style="@style/text_start"
            android:layout_toRightOf="@id/text_work"/>

        <ImageView
            android:id="@+id/icon_image_next_education"
            style="@style/base_iamge_item_information" />

        <TextView
            android:id="@+id/tv_input_project_work"
            style="@style/base_item_iformation"
            android:layout_marginRight="10dp"
            android:maxEms="13"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color_b5"
            android:layout_toLeftOf="@id/icon_image_next_education"
            android:text="请输入担任职位" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line_background" />

    <RelativeLayout
        android:id="@+id/rl_discrub_project"
        style="@style/relation_editor_resume">

        <TextView
            style="@style/base_item_iformation"
            android:layout_marginLeft="10dp"
            android:text="项目介绍" />

        <ImageView
            android:id="@+id/icon_image_next_static"
            style="@style/base_iamge_item_information" />

        <TextView
            android:id="@+id/tv_describe_project"
            style="@style/base_item_iformation"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxEms="13"
            android:textColor="@color/text_color_b5"
            android:layout_toLeftOf="@id/icon_image_next_static"
            android:text="请输入项目介绍" />
    </RelativeLayout>

</LinearLayout>
