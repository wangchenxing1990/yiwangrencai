<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_popuwind"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout

        style="@style/public_title">

        <FrameLayout
            android:id="@+id/iv_back_basic"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/back_selector"
            android:clickable="true"
            android:visibility="visible">

            <ImageView
                style="@style/public_image_back"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_tiltless"
            style="@style/public_text_middle"
            android:text="工作经历" />

        <TextView
            android:id="@+id/tv_next_skip_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/tv_tiltless"
            android:text="跳过"
            android:visibility="invisible"
            android:textColor="@color/bg_white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_next_basic"
            style="@style/public_text_next"
            android:text="保存"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_company_name"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_company_name"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="公司名称" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_company_name" />

                <ImageView
                    android:id="@+id/icon_image_next_basic"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_input_company_name"
                    style="@style/base_item_iformation"
                    android:textColor="@color/text_color_b5"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:layout_toLeftOf="@id/icon_image_next_basic"
                    android:text="请输入公司名称" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />
            <!-- 性别-->
            <RelativeLayout
                android:id="@+id/rl_industry_involved"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_industry"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="所属行业" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_industry" />

                <ImageView
                    android:id="@+id/icon_image_next_sex"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_suoshu_hangye"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b5"
                    android:layout_toLeftOf="@id/icon_image_next_sex"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:text="请选择所属行业" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />
            <!-- 生日 -->
            <RelativeLayout
                android:id="@+id/rl_natrue_business"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_catgary"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="公司性质" />
                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_catgary" />


                <ImageView
                    android:id="@+id/icon_image_next_birthday"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_select_natrue_business"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b5"
                    android:layout_toLeftOf="@id/icon_image_next_birthday"
                    android:text="请选择公司性质" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <!--学历-->
            <RelativeLayout
                android:id="@+id/rl_scale_company"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_company_scanle"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="公司规模" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_company_scanle" />

                <ImageView
                    android:id="@+id/icon_image_next_education"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_select_company_scale"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b5"
                    android:layout_toLeftOf="@id/icon_image_next_education"
                    android:text="请选择公司规模" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_entry_time"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_entry_time"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="入职时间" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_entry_time" />

                <ImageView
                    android:id="@+id/icon_image_next_work"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_entry_time"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b5"
                    android:layout_toLeftOf="@id/icon_image_next_work"
                    android:text="请选择入职时间" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_dimission"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_leave_time"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="离职时间" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_leave_time" />

                <ImageView
                    android:id="@+id/icon_image_next_location"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_leave_time"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b5"
                    android:layout_toLeftOf="@id/icon_image_next_location"
                    android:text="请选择离职时间" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_work_name"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_work_name"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="职位名称" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_work_name" />

                <ImageView
                    android:id="@+id/icon_image_next_static"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_input_work_names"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b5"
                    android:layout_toLeftOf="@id/icon_image_next_static"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:text="请输入职位名称" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_work_discriub"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_work_context"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:text="工作描述" />
                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_work_context" />

                <ImageView
                    android:id="@+id/icon_image_next_phone"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_describe_work"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/text_color_b5"
                    android:layout_toLeftOf="@id/icon_image_next_phone"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:text="请输入工作描述" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/linearLayout_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@mipmap/btn_delete_n2x" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="删除"
                        android:textColor="#ff8000"
                        android:textSize="20dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
