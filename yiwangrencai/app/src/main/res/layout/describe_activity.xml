<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_popuwind"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/text_color_green">

        <FrameLayout
            android:id="@+id/fram_decribe_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@mipmap/btn_back2x" />
        </FrameLayout>

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="描述"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            >

            <TextView
                android:id="@+id/tv_save_describe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="保存"
                android:textColor="#ffffff"
                android:textSize="18dp" />
        </FrameLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_white_background">

        <EditText
            android:id="@+id/et_input_describe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="3dp"
            android:textSize="15sp"
            android:textColor="@color/text_color_7"
            android:background="@null"
            android:gravity="top" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/text_view_input_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="最多输入1000个字/"
            android:textColor="@color/off_btn_press"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_number_limit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/text_view_input_number"
            android:gravity="center"
            android:text="1000"
            android:textColor="@color/text_color_green"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_clear_all"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:background="@drawable/background_selector_editor"
            android:clickable="true"
            android:gravity="center"
            android:text="清空"
            android:textColor="@color/text_color_green"
            android:textSize="15dp" />

    </RelativeLayout>

</LinearLayout>
