<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_popuwind"
    android:orientation="vertical">

    <RelativeLayout

        style="@style/public_title">

        <FrameLayout
            android:id="@+id/iv_back_basic"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/back_selector"
            android:clickable="true">
            <ImageView
                android:layout_gravity="center"
                style="@style/public_image_back" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/texteducation"
            style="@style/public_text_middle"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:paddingRight="6dp"
            android:gravity="center"
            android:background="@drawable/shape_white_left"
            android:textColor="@color/text_color_green"
            android:text="学历教育" />
        <TextView
            android:id="@+id/textskilltrain"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="6dp"
           android:paddingRight="10dp"
            android:gravity="center"
            android:textColor="@color/bg_white"
            android:background="@drawable/shape_green_right"
            android:textSize="16sp"
            android:text="技能培训" />
        </LinearLayout>
        <TextView
            android:id="@+id/textsave"
            style="@style/public_text_next"
            android:text="保存" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/framlayout_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/framlayout_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</LinearLayout>
