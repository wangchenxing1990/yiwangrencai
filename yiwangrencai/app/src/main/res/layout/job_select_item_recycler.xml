<?xml version="1.0" encoding="utf-8"?>
<com.yiwangrencai.ywkj.view.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/select_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxEms="30"
                android:ellipsize="end"
                android:text="Bingo"
                android:textColor="#555555"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/text_part_states"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:maxLines="1"
                android:maxEms="30"
                android:gravity="center"
                android:visibility="invisible"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:text="实习"
                android:background="#e3534f"
                android:textColor="#b5b5b5"
                android:textSize="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bingo"
                android:ellipsize="end"
                android:maxEms="13"
                android:maxLines="1"
                android:textColor="#959595"
                android:textSize="15dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="#b5b5b5"/>

            <TextView
                android:id="@+id/text_updatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="2017-05-03"
                android:textColor="#959595"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/icon_address_m3x"/>

            <TextView
                android:id="@+id/text_location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="4"
                android:ellipsize="end"
                android:textColor="#959595"
                android:textSize="15dp"
                android:text="北戴河"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/icon_user_m3x"/>

            <TextView
                android:id="@+id/text_education_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#959595"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="高中"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#959595"
                android:textSize="15dp"
                android:text="/"/>

            <TextView
                android:id="@+id/text_work_year_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#959595"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="经验不限"/>

            <TextView
                android:id="@+id/text_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff8000"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="2000-35000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff8000"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="元/月"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <!--<Button-->
        <!--android:id="@+id/stick"-->
        <!--android:text="置顶"-->
        <!--android:textColor="#ffffff"-->
        <!--android:textSize="16sp"-->
        <!--android:background="@drawable/btn_stick"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="match_parent" />-->

        <!--<Button-->
        <!--android:id="@+id/mark"-->
        <!--android:text="标记未读"-->
        <!--android:textColor="#ffffff"-->
        <!--android:textSize="16sp"-->
        <!--android:background="@drawable/btn_mark"-->
        <!--android:layout_width="120dp"-->
        <!--android:layout_height="match_parent" />-->

        <Button
            android:id="@+id/delete"
            android:text="撤 销"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/btn_delete"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

    </LinearLayout>

</com.yiwangrencai.ywkj.view.SwipeItemLayout>