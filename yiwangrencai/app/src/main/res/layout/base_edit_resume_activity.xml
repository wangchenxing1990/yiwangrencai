<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_popuwind"
    android:orientation="vertical">

    <RelativeLayout

        style="@style/public_title">

        <FrameLayout
            android:id="@+id/iv_back_basic"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/back_selector"
            android:clickable="true">
            <ImageView
                android:layout_gravity="center"
                style="@style/public_image_back" />
        </FrameLayout>
        <TextView
            style="@style/public_text_middle"
            android:text="基本资料" />

        <TextView
            android:id="@+id/tv_next_basic"
            style="@style/public_text_next"
            android:text="保存" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_name"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_name"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="姓名" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_name"/>

                <ImageView
                    android:id="@+id/icon_image_next_basic"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_input_name"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/icon_image_next_basic"
                    android:text="请输入姓名" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />
            <!-- 性别-->
            <RelativeLayout
                android:id="@+id/rl_sex"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_sex"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="性别" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_sex"/>

                <ImageView
                    android:id="@+id/icon_image_next_sex"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_sex_input"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/icon_image_next_sex"
                    android:text="男" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />
            <!-- 生日 -->
            <RelativeLayout
                android:id="@+id/rl_birthday"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_birthday"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="生日" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_birthday"/>

                <ImageView
                    android:id="@+id/icon_image_next_birthday"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_select_birthday"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/icon_image_next_birthday"
                    android:text="请选择生日" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <!--学历-->
            <RelativeLayout
                android:id="@+id/rl_education"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_education"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="学历" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_education"/>

                <ImageView
                    android:id="@+id/icon_image_next_education"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_input_education"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/icon_image_next_education"
                    android:text="请选择学历" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_work_suffer"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_work_exp"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="相关工作经验" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_work_exp"/>

                <ImageView
                    android:id="@+id/icon_image_next_work"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_input_work_suffer"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/icon_image_next_work"
                    android:text="请选择工作经验" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_location"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_address"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="现居住地" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_address"/>

                <ImageView
                    android:id="@+id/icon_image_next_location"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_select_location"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/icon_image_next_location"
                    android:text="请选择现居住地" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_work_state"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_find_work"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="求职状态" />
                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_find_work"/>

                <ImageView
                    android:id="@+id/icon_image_next_static"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_work_state_basic"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/icon_image_next_static"
                    android:text="不在职,正在找工作" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_address"
                style="@style/relation_editor_resume">

                <TextView
                    android:id="@+id/text_detail_address"
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="详细地址" />

                <TextView
                    style="@style/text_start"
                    android:layout_toRightOf="@id/text_detail_address"/>

                <ImageView
                    android:id="@+id/icon_image_next_phone"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_input_address"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/icon_image_next_phone"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxEms="10"
                    android:text="详细地址" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />

            <RelativeLayout
                android:id="@+id/rl_cesus_name"
                style="@style/relation_editor_resume">

                <TextView
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="户籍" />

                <ImageView
                    android:id="@+id/icon_image_next_email"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_input_cesus_name"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/icon_image_next_email"
                    android:text="户籍" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />


            <RelativeLayout
                android:id="@+id/rl_marital"
                style="@style/relation_editor_resume">

                <TextView
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="婚姻状况" />

                <ImageView
                    android:id="@+id/icon_image_next_qq"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_marital"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/icon_image_next_qq"
                    android:text="婚姻状况" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_background" />
            <RelativeLayout
                android:id="@+id/rl_high"
                style="@style/relation_editor_resume">

                <TextView
                    style="@style/base_item_iformation"
                    android:layout_marginLeft="10dp"
                    android:text="身高(cm)" />

                <ImageView
                    android:id="@+id/icon_image_next_high"
                    style="@style/base_iamge_item_information" />

                <TextView
                    android:id="@+id/tv_input_high"
                    style="@style/base_item_iformation"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/icon_image_next_high"
                    android:text="身高" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
