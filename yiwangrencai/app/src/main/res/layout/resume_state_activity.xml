<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_popuwind"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <RelativeLayout style="@style/title_login">

        <FrameLayout
            android:id="@+id/fram_job_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@mipmap/btn_back2x" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="简历状态"
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_open"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#ffffff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="完全公开"
            android:textSize="15dp"
            android:textColor="#898989"/>

        <ImageView
            android:id="@+id/image_one"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/yes_ok"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line_background"/>
    <RelativeLayout
        android:id="@+id/rl_no_open"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#ffffff"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不公开"
            android:textSize="15dp"
            android:textColor="#898989"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任何人都搜索不到您的简历,只有主动投递给企业才能查看"
                android:textColor="#898989"
                android:layout_marginTop="3dp"
                android:textSize="13dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/image_two"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_marginRight="20dp"
            android:src="@mipmap/yes_ok"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_line_background"/>
    <RelativeLayout
        android:id="@+id/rl_secrecy"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#ffffff"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完全保密"
                android:textSize="15dp"
                android:textColor="#898989"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="直接关闭简历,不能通过任何方式查看您的简历"
                android:layout_marginTop="2dp"
                android:textColor="#898989"
                android:textSize="13dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/image_three"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_marginRight="20dp"
            android:src="@mipmap/yes_ok"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
